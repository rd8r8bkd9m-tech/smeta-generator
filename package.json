{
  "name": "smeta-pro",
  "version": "1.0.0",
  "private": true,
  "description": "Профессиональная система сметных расчетов",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:wasm": "turbo run build --filter=./packages/wasm-*",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:bot": "pnpm --filter telegram-bot dev"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.0",
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}